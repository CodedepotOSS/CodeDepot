### data direcotory
DATA_ROOT=/usr/local/codedepot/data

### database setup
PGPORT = 5432
DBNAME = codedepot_db
DBUSER = codedepot_user
DBPASS = codedepot_pass

### web setup
WEBAPP.NAME = codedepot

### solr setup
INDEX = ${DATA_ROOT}/index
SOLR_URL = http://localhost:8080/${WEBAPP.NAME}/solr

### data location
ETC_PATH=${DATA_ROOT}/etc
SRC_PATH=${DATA_ROOT}/src
HTML_PATH=${DATA_ROOT}/html
