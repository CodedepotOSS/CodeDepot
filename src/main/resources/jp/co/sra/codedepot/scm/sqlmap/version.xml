<!DOCTYPE sqlMap
    PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
    "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="version">
	<select id="getVersion"
		resultClass="jp.co.sra.codedepot.scm.entity.Version">
	 	SELECT
	 		kind,
			vernum,
	 		mtime
	 	FROM
	 		version
	 	WHERE
	 	   	kind = #value#
	</select>
</sqlMap>
